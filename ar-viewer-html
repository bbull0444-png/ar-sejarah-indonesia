    <!-- JavaScript -->
    <script src="src/js/ar-handler.js"></script>
    <script src="src/js/info-modal.js"></script>
    
    <script>
        // Virtual Tour Handler
        function openVirtualTour(temple) {
            window.location.href = `virtual-tour.html?temple=${temple}`;
        }

        // Show tour button when temple marker detected
        const markerBorobudur = document.querySelector('#marker-0');
        const markerPrambanan = document.querySelector('#marker-6');
        
        if (markerBorobudur) {
            markerBorobudur.addEventListener('markerFound', function() {
                const btn = this.querySelector('.tour-button');
                if (btn) btn.classList.add('show');
            });
            
            markerBorobudur.addEventListener('markerLost', function() {
                const btn = this.querySelector('.tour-button');
                if (btn) btn.classList.remove('show');
            });
        }

        if (markerPrambanan) {
            markerPrambanan.addEventListener('markerFound', function() {
                const btn = this.querySelector('.tour-button');
                if (btn) btn.classList.add('show');
            });
            
            markerPrambanan.addEventListener('markerLost', function() {
                const btn = this.querySelector('.tour-button');
                if (btn) btn.classList.remove('show');
            });
        }
    </script>
